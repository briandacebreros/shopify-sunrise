<style>    
    /* Style the tab */
    .tab {
      overflow: hidden;
      border: 1px solid #ccc;
      background-color: #f1f1f1;
    }
    
    /* Style the buttons inside the tab */
    .tab button {
      background-color: inherit;
      float: left;
      border: none;
      outline: none;
      cursor: pointer;
      padding: 14px 16px;
      transition: 0.3s;
      font-size: 17px;
    }
    
    /* Change background color of buttons on hover */
    .tab button:hover {
      background-color: #ddd;
    }
    
    /* Create an active/current tablink class */
    .tab button.active {
      background-color: #ccc;
    }
    
    /* Style the tab content */
    .tabcontent {
      display: none;
      padding: 6px 12px;
      border-top: none;
    }
    .tab-menu-subcategory {
        position: relative;
        display:block;
        background-color: #f3f3f3;
        height: 250px;
        margin: 5px;
    }
    .tab-menu-subcategory div {
        z-index: 4;
        position: relative;
        display: block;
    }

    .container-swiperMenuTabs .swiper {
        width: 100%;
        height: 100%;
        padding-bottom: 45px;
    }

    .container-swiperMenuTabs .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;

        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
      }

      .swiper-slide img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .cover-screen {
        position: absolute;
        display: block;
        height: 100%;
        width: 100%;
        background-color: #000;
        opacity: 0.3;
        z-index: 2;
    }
</style>
    
    
    
<h2>{{ section.settings.title }}</h2>

{% if section.settings.menu != blank %}
  <div class="container-swiperMenuTabs">
    <div class="tab">
        <div class="swiper swiperMenuTabs">
            <div class="swiper-scrollbar mb-10"></div>
            <div class="swiper-wrapper">
                {%- assign i = 0 -%}
                {% for link in section.settings.menu.links -%}
                    <div class="swiper-slide">
                        <button class="tablinks {% if i == 0 %}active{% endif %}" onclick="openTab(event, '{{ link.handle }}')">{{ link.title }}</button>
                    </div>
                    {% assign i = i | plus: 1 %}
                {%- endfor %}
            </div>
        </div>
    </div>
  </div>
{% endif %}


{%- assign i = 0 -%}
{% for link in section.settings.menu.links -%}

    <div id="{{ link.handle }}" class="tabcontent container-swiperMenuTabs"
          {% if i == 0 %}style="height:325px; display:block;"{% else %}style="height:325px;"{% endif %} >
          {% assign i = i | plus: 1 %}
        <h3>{{ link.title }}</h3>
        <a class="button filled-button" href="{{ link.url }}">Ver todo</a>
        {% if link.levels > 0 %}
            <div class="swiper swiperMenuTabsSub">
                <div class="swiper-wrapper">
                    {% for sublink in link.links -%}
                        <div class="swiper-slide tab-menu-subcategory" 
                                style="background:url(https://cdn.shopify.com/s/files/1/0566/4607/4438/files/janitorial_supplies_collection_1500x.jpg?v=1652525956) no-repeat center center; background-size: cover;">
                            <span class="cover-screen"></span>
                            <div>
                                <h1>{{ sublink.title }}</h1>
                                <a class="button filled-button" href="{{ sublink.url }}">Ver</a>
                            </div>
                        </div>
                    {% endfor %}
                    
                    <div class="swiper-slide tab-menu-subcategory" 
                                style="background:url(https://cdn.shopify.com/s/files/1/0566/4607/4438/files/janitorial_supplies_collection_1500x.jpg?v=1652525956) no-repeat center center; background-size: cover;">
                            <span class="cover-screen"></span>
                            <div>
                                <h1>{{ sublink.title }}</h1>
                            </div>
                        </div>
                        <div class="swiper-slide tab-menu-subcategory" 
                                style="background:url(https://cdn.shopify.com/s/files/1/0566/4607/4438/files/janitorial_supplies_collection_1500x.jpg?v=1652525956) no-repeat center center; background-size: cover;">
                            <span class="cover-screen"></span>
                            <div>
                                <h1>{{ sublink.title }}</h1>
                            </div>
                        </div>
                </div>
                <div class="swiper-pagination"></div>
                
            </div>
            
        {% endif %}
        
    </div>
{% endfor %}



<script>
    function openTab(evt, tabName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(tabName).style.display = "block";
    evt.currentTarget.className += " active";
    }



    var swiper = new Swiper(".swiperMenuTabs", {
      scrollbar: {
        el: ".swiper-scrollbar"
      },
      breakpoints: {
        // when window width is >= 320px
        120: {
        slidesPerView: 1,
        spaceBetween: 20
        },
        // when window width is >= 480px
        480: {
        slidesPerView: 2,
        spaceBetween: 30
        },
        // when window width is >= 640px
        690: {
        slidesPerView: 3,
        spaceBetween: 40
        },
        900: {
        slidesPerView: 3,
        spaceBetween: 40
        }
      }
    });


    var swiper = new Swiper(".swiperMenuTabsSub", {
      pagination: {
          el: ".swiper-pagination",
      },
      breakpoints: {
        // when window width is >= 320px
        120: {
        slidesPerView: 1,
        spaceBetween: 20
        },
        // when window width is >= 480px
        480: {
        slidesPerView: 2,
        spaceBetween: 30
        },
        // when window width is >= 640px
        690: {
        slidesPerView: 3,
        spaceBetween: 40
        },
        900: {
        slidesPerView: 3,
        spaceBetween: 40
        }
      }
    });
  </script>




